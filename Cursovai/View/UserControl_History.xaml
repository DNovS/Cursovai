<UserControl x:Class="Cursovai.UserControl_History"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cursovai"
             xmlns:materialDesing="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:viewmodel="clr-namespace:Cursovai.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:HistoryViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid>
        <ScrollViewer Height="450" Margin="25">
            <ListView x:Name="Order" Margin="5" ItemsSource="{Binding orders}" SelectedItem="{Binding order}">
                <ListView.ItemTemplate >
                    <DataTemplate>
                        <Border HorizontalAlignment="Center" BorderBrush="{Binding color}" BorderThickness="3">                           
                        <StackPanel HorizontalAlignment="Center" Margin="5" Background="LemonChiffon">
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="ФИО: " FontSize="20" Margin="5"/>
                                <TextBlock x:Name="fcs" FontSize="20" VerticalAlignment="Center" Text="{Binding Path = fcs}" Width="100"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Цена: " FontSize="20" Margin="5"/>
                                    <TextBlock x:Name="cost" Text="{Binding Path=cost}" FontSize="20" Margin="0,5,0,5" VerticalAlignment="Center"/>
                                </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Дата выполнения " FontSize="20" Margin="5"/>
                                <TextBlock x:Name="date_compl" Text="{Binding Path=date_com}" FontSize="20" Margin="5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Дата регистрации " FontSize="20" Margin="5"/>
                                <TextBlock x:Name="date_reg" Text="{Binding Path=date_reg}" FontSize="20" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
